# .env файл для локальной разработки
# Скопируйте этот файл в .env и заполните своими значениями

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_ALLOWED_CHATS=-1001234567890,-1009876543210
TELEGRAM_ADMIN_USERS=123456789,987654321

# Ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b
OLLAMA_VISION_MODEL=llava:7b

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/disco_coop.log

# Game
GAME_WINDOW_TITLE=Disco Elysium
SCREENSHOT_INTERVAL=1.0
ACTION_DELAY=0.5