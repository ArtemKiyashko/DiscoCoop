[Unit]
Description=Disco Coop Telegram Bot
After=ollama.service
Requires=ollama.service

[Service]
Type=simple
ExecStart=CURRENT_DIR_PLACEHOLDER/venv/bin/python CURRENT_DIR_PLACEHOLDER/main.py
Environment=PATH=CURRENT_DIR_PLACEHOLDER/venv/bin:PYTHON_DIR_PLACEHOLDER/bin:LOCAL_BIN_PLACEHOLDER:$PATH
Environment=HOME=HOME_PLACEHOLDER
WorkingDirectory=CURRENT_DIR_PLACEHOLDER
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=default.target